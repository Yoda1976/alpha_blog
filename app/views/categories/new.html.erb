<h1 class="text-center mt-4">Create a new category</h1>

<div class="row justify-content-center">
  
<div class="col-10">  
  <%= render 'shared/errors', obj: @category %>    
  <%= form_with(model: @category, class:"shadow p-3 bg-info rounded", local: true) do|f| %>
      <div class="form-group row mt-3">
        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br/>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
        </div>
      </div>
      
      <div class="form-group row mt-3 justify-content-center">
        <div class="col-2">  
          <%= f.submit class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>

    <% end %>
  </div>
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info mt-5 text-center text-decoration-none" %>
</div>